.addProject__triangle
    width 13px
    height 19px
    margin-top 268px
    display inline-block
    float left
    clip-path: polygon(100% 0, 100% 100%, 0% 50%);
    background #FFFFFF

.addProject__box
    width 387px
    // height 400px
    display inline-block
    padding-top 20px
    padding-left 25px
    padding-right 25px
    bottom 24px

    background #FFFFFF

    font-family 'Roboto', sans-serif
    border-radius 4px
    box-shadow 0px 10px 20px 0px rgba(0, 0, 0, 0.19)

.addProject__projecTitleInput
    width 100%
    height 28px !important
    margin-bottom 21px

    font-size 24px

.addProject__projecTitleInput::placeholder
    color #C5C5C5


.addProject__radio
    visibility hidden
    position absolute

.addProject__Title
    margin-bottom 12px
    font-weight bold

.addProject__categoryList
    margin-bottom 19px

.addProject__category
    margin-right 14px

.addProject__icon
    fill #9B9B9B
    width 30px
    height 30px
    cursor pointer
    border 2px solid transparent

// To vertical align icons
.addProject__home
.addProject__work
    transform translateY(1px)

// Category icon checked
.addProject__radio:checked + .addProject__important
    fill #D0021B

