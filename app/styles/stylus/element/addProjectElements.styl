// COLOR
.addProject__color
    display inline-block
    border-radius 50%

.addProject__blue
    background-color #3997D6

.addProject__orange
    background-color #DD6000

.addProject__green
    background-color #19BF65

.addProject__purple
    background-color #B0254B

.addProject__yellow
    background-color #FFCC00

.addProject__radio:checked + .addProject__color::after
    content ''
    display block
    margin 0 auto
    margin-top 3px

    border-radius 50%

    width 20px
    height 20px
    background rgba(255, 255, 255, 0.3)
    
// BUTTON
.addProject__button
    height 56px
    width 160px
    margin 0 auto
    margin-top 39px
    margin-bottom 20px

    font-weight bold
    text-align center
    color #FFFFFF


    padding 20px

    border-radius 30px

    background-color #3997D6

    cursor pointer
    box-shadow 0px 8px 20px rgba(57, 151, 214, 0.3)

    transition: transform 0.3s ease, box-shadow 0.3s ease, background-color 0.3s ease, fill 0.3s ease;
    &:hover 
        background-color #FFFFFF
        border solid 1px #3997D6

        color #3997D6

        box-shadow 0px 15px 15px 4px rgba(0, 0, 0, 0.1)
        transform translateY(-7px)
    &:active
        background-color #3997D6
        color #FFFFFF

        border none

        transform translateY(0px)
        box-shadow 0px 8px 20px rgba(57, 151, 214, 0.3)