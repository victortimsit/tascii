.project__content
    height 262px
    padding-top 24px
    padding-left 25px
    padding-right 25px
    padding-bottom 48px

    overflow-y scroll


.project__header
    margin-bottom: 23px;

    display flex
    align-items center

.project__icon
    margin-left 25px
    width 17px
    height 15px

.project__title
    display inline-block
    margin-left 5px

    font-weight bold
    font-size 24px

.project__fullScreen
    position: absolute
    right: 25px

    cursor pointer
    pointer-events none
    opacity 0

    transition 150ms opacity ease

.project__addTaskInput
    width 100%
    display block
    margin-left 25px

.project__progressBar
    margin-bottom 10px
    width 100%
    height 10px

    background-color #3997D6

.project__taskDescription
    width 100%

.project__task
    margin-bottom 23px
    display flex
    align-items baseline


.project__checkbox
    
    margin-right 13px
    background-color red

input:checked + .project__taskDescription
    text-decoration line-through


.project__gradientTop
    height 24px
    width 100%
    position absolute

    background: linear-gradient(#FFFFFF, rgba(255, 255, 255, 0));

.project__gradientBottom
    height 64px
    width 100%
    position absolute

    bottom 0
    left 0

    background: linear-gradient(rgba(255, 255, 255, 0), #FFFFFF);

    pointer-events none